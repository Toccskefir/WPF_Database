<Window x:Class="WPF_Database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Database"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button x:Name="buttonAdd" Content="Hozzáad" Width="150" Click="buttonAdd_Click"/>
            <Button x:Name="buttonModify" Content="Módosít" Width="150" Click="buttonModify_Click"/>
            <Button x:Name="buttonDelete" Content="Töröl" Width="150" Click="buttonDelete_Click"/>
        </StackPanel>
        <DataGrid x:Name="dataGridEmployees"></DataGrid>
    </DockPanel>
</Window>
